{
  "name": "Light Source Item Test",
  "description": "Test that light source items emit light and are not picked up",
  "seed": 12345,
  "player": {
    "x": 5,
    "y": 5,
    "hp": 20
  },
  "entities": [
    {"entity_type": "item", "id": "wall_torch", "x": 7, "y": 5},
    {"entity_type": "item", "id": "brine_vial", "x": 6, "y": 5}
  ],
  "actions": [
    {"turn": 0, "action": {"type": "move", "dx": 1, "dy": 0}},
    {"turn": 1, "action": {"type": "move", "dx": 1, "dy": 0}}
  ],
  "assertions": [
    {
      "after_turn": 0,
      "check": {"type": "inventory_contains", "item": "brine_vial"},
      "message": "Brine vial should be picked up"
    },
    {
      "after_turn": 1,
      "check": {"type": "inventory_size", "op": "eq", "value": 1},
      "message": "Only brine vial should be in inventory (torch not picked up)"
    },
    {
      "after_turn": 1,
      "check": {"type": "light_level", "x": 7, "y": 5, "op": "gt", "value": 100},
      "message": "Torch position should be well lit"
    }
  ]
}
