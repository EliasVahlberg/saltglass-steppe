  "player": { "x": 5, "y": 5, "hp": 20, "max_hp": 20, "ap": 10, "max_ap": 10 },
  "entities": [
    { "entity_type": "enemy", "id": "salt_crawler", "x": 6, "y": 5, "hp": 1, "ai_disabled": true }
  ],
  "mocks": { "combat_always_hit": true, "combat_fixed_damage": 5 },
  "actions": [
    { "turn": 0, "action": { "type": "attack", "target_x": 6, "target_y": 5 } }
  ],
  "assertions": [
    { "at_end": true, "check": { "type": "no_enemy_at", "x": 6, "y": 5 }, "message": "Enemy should be dead" },
