{
  "name": "Event Bus Test",
  "description": "Test that events are processed and logged",
  "seed": 42,
  "world_x": 5,
  "world_y": 5,
  "player": {"x": 10, "y": 10, "hp": 50, "max_hp": 50, "xp": 0},
  "mocks": {"combat_always_hit": true, "combat_fixed_damage": 100},
  "entities": [
    {"entity_type": "enemy", "id": "shard_spider", "x": 11, "y": 10, "hp": 1, "ai_disabled": true}
  ],
  "actions": [
    {"turn": 0, "action": {"type": "move", "dx": 1, "dy": 0}, "comment": "Attack enemy via bump"},
    {"turn": 1, "action": {"type": "wait", "turns": 1}, "comment": "Wait for event processing"}
  ],
  "assertions": [
    {"at_end": true, "check": {"type": "enemy_count", "op": "eq", "value": 0}, "message": "Enemy should be dead"},
    {"at_end": true, "check": {"type": "message_contains", "text": "[Event]"}, "message": "Event message should be logged"}
  ]
}
