{
  "name": "enemy_loot_drops",
  "description": "Tests that enemies drop loot items when killed",
  "seed": 42,
  "player": {
    "x": 10,
    "y": 10,
    "hp": 20,
    "max_hp": 20,
    "ap": 10,
    "max_ap": 10
  },
  "entities": [
    {
      "entity_type": "enemy",
      "id": "mirage_hound",
      "x": 12,
      "y": 10,
      "hp": 8
    }
  ],
  "mocks": {
    "combat_always_hit": true,
    "combat_fixed_damage": 10
  },
  "actions": [
    {
      "turn": 0,
      "action": {
        "type": "attack",
        "target_x": 12,
        "target_y": 10
      }
    }
  ],
  "assertions": [
    {
      "at_end": true,
      "check": {
        "type": "no_enemy_at",
        "x": 12,
        "y": 10
      },
      "message": "Enemy should be gone after being killed"
    },
    {
      "at_end": true,
      "check": {
        "type": "player_alive"
      }
    },
    {
      "at_end": true,
      "check": {
        "type": "message_contains",
        "text": "dropped"
      },
      "message": "Combat log should contain loot drop message"
    }
  ]
}
