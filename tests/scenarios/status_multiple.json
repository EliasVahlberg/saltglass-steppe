{
  "name": "Multiple Status Effects Test",
  "description": "Test multiple status effects stacking",
  "seed": 12345,
  "player": { "x": 10, "y": 10, "hp": 50, "max_hp": 50, "ap": 4, "max_ap": 4 },
  "variables": {
    "debug_disable_glare": true
  },
  "actions": [
    {
      "turn": 0,
      "action": {
        "type": "apply_status",
        "effect": "poison",
        "duration": 2,
        "potency": 2
      }
    },
    {
      "turn": 0,
      "action": {
        "type": "apply_status",
        "effect": "burn",
        "duration": 2,
        "potency": 3
      }
    },
    { "turn": 0, "action": { "type": "end_turn" } },
    { "turn": 1, "action": { "type": "end_turn" } }
  ],
  "assertions": [
    {
      "at_end": true,
      "check": { "type": "player_hp", "op": "eq", "value": 40 },
      "message": "Both effects should deal damage: 50 - (2+3)*2 = 40"
    },
    {
      "at_end": true,
      "check": { "type": "status_effect_count", "op": "eq", "value": 0 },
      "message": "Both effects should expire"
    }
  ]
}
