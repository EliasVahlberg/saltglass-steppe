    "seed": 42,
    "mocks": {"combat_always_hit": true, "combat_fixed_damage": 20},
    "player": {
        "x": 5, "y": 5, "hp": 20, "max_hp": 20, "ap": 10, "max_ap": 10,
        "inventory": ["brine_shot", "brine_shot"],
        "equipped_weapon": "brine_pistol"
