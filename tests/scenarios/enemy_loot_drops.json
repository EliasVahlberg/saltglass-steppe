    {
      "turn": 1,
      "comment": "Check for items at enemy death location",
      "action": {
        "type": "log",
        "query": {
          "type": "entity_at",
          "x": 12,
          "y": 10
        }
      }
    }
  ],
  "assertions": [
    {
      "at_end": true,
      "check": {
        "type": "enemy_dead",
        "id": "mirage_hound"
      }
    },
    {
      "at_end": true,
      "check": {
        "type": "custom",
        "description": "Loot item should exist at enemy death location"
      }
    },
    {
      "at_end": true,
      "check": {
        "type": "player_alive"
      }
    }
  ]
