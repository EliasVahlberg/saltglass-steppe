{
  "name": "rest_blocked_by_enemy",
  "description": "Tests that rest is blocked when enemy is nearby",
  "seed": 42,
  "player": {
    "x": 10,
    "y": 10,
    "hp": 10,
    "max_hp": 20,
    "ap": 10,
    "max_ap": 10
  },
  "entities": [
    {
      "entity_type": "enemy",
      "id": "salt_crawler",
      "x": 12,
      "y": 10,
      "hp": 8,
      "comment": "Nearby enemy - should block resting"
    }
  ],
  "actions": [
    {
      "turn": 0,
      "comment": "Attempt to rest with nearby enemy (should fail)",
      "action": {
        "type": "rest"
      },
      "expected_error": "You cannot rest with enemies nearby!"
    }
  ],
  "assertions": [
    {
      "at_end": true,
      "check": {
        "type": "player_hp",
        "value": 10,
        "description": "Player HP should be unchanged (rest blocked)"
      }
    },
    {
      "at_end": true,
      "check": {
        "type": "turn",
        "value": 0,
        "description": "Turn should not advance (rest blocked)"
      }
    },
    {
      "at_end": true,
      "check": {
        "type": "player_alive"
      }
    }
  ]
}
